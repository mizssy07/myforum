<div class="container">
  <h1><%= @topic.title %></h1>

  <% if @posts.count >= 1 %>
    <% @posts.each.with_index(1) do |post, idx| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <%= idx %>. <%= post.name %>
            <input type="hidden" name="id" value="<%= post.id %>">
            <% if @current_user && post.user_id == @current_user.id %>
              <%= link_to("削除",
                          "/posts/delete/#{post.id}",
                          {method: "post",
                           data: {confirm: "削除してもよろしいですか？"},
                           class: "badge badge-dark pull-right"}) %>
            <% end %>
          </div>
        </div>
        <div class="panel-body">
          <%= post.content %><br>
          <% if post.image_name.present? %>
            <img src="<%= post.image_name.url(:thumb) %>"
                 class="img-responsive img-thumbnail">
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3>まだ書き込みはありません</h3>
  <% end %>

  <% if @current_user %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">新規投稿</h3>
      </div>
        <%= form_tag("/posts/create", {multipart: true}) do %>
          <div class="panel-body">
            <div class="form-group">
              名前:<input name="name" class="form-control" value="名無しさん" >
            </div>
            <div class="form-group">
              本文:<textarea name="content" class="form-control"></textarea>
            </div>
            <input type="hidden" name="topic_id" value="<%= @topic.id %>">
            <input type="hidden" name="user_id" value="<%= @current_user.id %>">
            <input type="submit" class="btn btn-default" value="投稿">
          </div>
          <div class="panel-footer">
            <div class="form-group">
              画像:<input type="file" name="image_name">
              <input type="hidden" name="image_name_cache">
            </div>
          </div>
        <% end %>
    </div>
  <% end %>
</div>