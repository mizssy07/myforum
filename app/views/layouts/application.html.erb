<!DOCTYPE html>
<html>
  <head>
    <title>Myforum</title>
    <%= csrf_meta_tags %>
    <meta  name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
  </head>

  <body>
  <ul class="nav nav-pills nav-justified">
    <li class="nav-item"><%= link_to("TOP", "/", {class: "nav-link"}) %></li>
    <li class="nav-item"><%= link_to("板一覧", "/topics/index", {class: "nav-link"}) %></li>
    <% if @current_user %>
      <li class="nav-item"><%= link_to("mypage", "/users/#{@current_user.id}", {class: "nav-link"}) %></li>
    <% else %>
      <li class="nav-item"><a class="nav-link" href="#">非ログイン時用リンク</a></li>
    <% end %>
    <% if @current_user %>
      <li class="nav-item"><%= link_to("Logout", "/logout", {method: :post, class: "nav-link"}) %></li>
    <% else %>
      <li class="nav-item"><%= link_to("Login", "/login", {class: "nav-link"}) %></li>
      <li class="nav-item"><%= link_to("Sign up", "/signup", {class: "nav-link"}) %></li>
    <% end %>
  </ul>

  <% flash.each do |name, msg| %>
    <div class="alert alert-<%= name %>">
      <a class="close" data-dismiss="alert">&times;</a>
      <%= msg %>
    </div>
  <% end %>

    <%= yield %>
  </body>
</html>
